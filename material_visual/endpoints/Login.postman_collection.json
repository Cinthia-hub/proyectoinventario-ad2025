	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Si el login fue exitoso (código 200)\r",
							"if (pm.response.code === 200) {\r",
							"    var jsonData = pm.response.json();\r",
							"    // Guardamos el token en una variable de la colección\r",
							"    pm.collectionVariables.set(\"token\", jsonData.token);\r",
							"    console.log(\"Token actualizado: \" + jsonData.token);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"admin\",\r\n    \"password\": \"123456789\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{url}}/auth/login",
					"host": [
						"{{url}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
